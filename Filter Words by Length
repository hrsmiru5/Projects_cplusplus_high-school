// Write a program that reads a text (max 100 characters) where words consist only of English letters and are separated by single spaces. The program also reads a natural number $n$ ($n \in [1, 100)$) and displays, on separate lines, the words from the text that have exactly $n$ letters. Words should be displayed in their order of appearance. If no such word exists, display the message nu exista.

#include <iostream>
#include <cstring>
using namespace std;

int main()
{
    char s[101], *p, sep[]="  ";
    int n,x=0;
    cin.get(s,101);
    cin.get();
    cin>>n;
    p=strtok(s,sep);
    while(p!=NULL)
    {
        if(strlen(p)==n)
        {
          x=1;
          cout<<p<<endl;
        }
        p=strtok(NULL,sep);
    }
    if(x==0)
        cout<<"nu exista";

    return 0;
}
